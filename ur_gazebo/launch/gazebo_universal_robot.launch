<?xml version="1.0"?>
<launch>
  
  <!-- Gazebo simulation arguments -->
  <arg name="sim" default="true" doc="Default is true, *robot*_planning_execution.launch uses ros_controllers instead of real controllers" />
  <arg name="limited" default="true"  doc="If true, limits joint range [-PI, PI] on all joints (simulation behaves better when joints are limited)" />
  <arg name="paused" default="false" doc="Starts gazebo in paused mode" />
  <arg name="gui" default="true" doc="Starts gazebo gui" />
  <arg name="sim_workstation" default="false" doc="Attaches robot to simulated ARMada workstation" />
  <arg name="gripper" default="" doc="Attaches gripper to end of robot arm" />

  <!-- Robot model information for choosing correct launch/configuration files -->
  <arg name="model" default="ur3" doc="Robot number model 3, 5, or 10 (16 not currently implemented)"/>

  <!-- Bring up Gazebo simulation of robot -->
  <include file="$(eval find('ur_gazebo') + '/launch/' + arg('model') + '.launch')">
      <arg name="limited" value="true" />
  </include>
  
  <!-- Launch gazebo controllers for robot -->
  <include file="$(eval find(arg('model') + '_moveit_config') + '/launch/' + arg('model') + '_moveit_planning_execution.launch')">
      <arg name="sim" value="true" />
      <arg name="limited" value="true" />
  </include>

  <!-- Launch Rviz with moveit interface for robot-->
  <include file="$(eval find(arg('model') + '_moveit_config') + '/launch/moveit_rviz.launch')">
      <arg name="config" value="true" />
  </include>

</launch>
